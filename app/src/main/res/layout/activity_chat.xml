<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="chatVM" type="com.socialnetworking.app.modules.chat.data.viewmodel.ChatVM"/>
    </data>
    <LinearLayout android:id="@+id/linearChat"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageClose"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_close"
                tools:ignore="ContentDescription" tools:src="@drawable/img_close"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtGarryWiller"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{chatVM.chatModel.txtGarryWiller}"
                style="@style/txtInterbold20_2" tools:text="@string/lbl_garry_willer"/>
            <ImageView android:id="@+id/imageEllipseFourteen"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="centerCrop" circular="@{true}"
                imageRes="@{@drawable/img_ellipse14_40x40}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse14_40x40"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="end"
            android:id="@+id/linearColumnrectangle3778"
            android:layout_height="0dp" android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_24pxv" android:paddingTop="@dimen/_24pxv">
            <View android:background="@color/deep_purple_50"
                android:id="@+id/lineRectangle3778"
                android:layout_height="@dimen/_2pxv" android:layout_width="@dimen/_414pxh"/>
            <LinearLayout android:id="@+id/linearColumnhilarryhoware"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_12pxv"
                android:paddingEnd="@dimen/_22pxh"
                android:paddingStart="@dimen/_22pxh"
                android:paddingTop="@dimen/_12pxv" style="@style/groupStyledeep_purple_3">
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtHilarryhoware"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{chatVM.chatModel.txtHilarryhoware}"
                    style="@style/txtInterregular14_1" tools:text="@string/msg_hi_larry_how_a"/>
            </LinearLayout>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearRowdelivered"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtDelivered"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{chatVM.chatModel.txtDelivered}"
                    style="@style/txtInterregular12_3" tools:text="@string/lbl_delivered"/>
                <ImageView android:id="@+id/imageCheckmark"
                    android:layout_gravity="bottom"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_width="@dimen/_15pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_checkmark_10x15"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_checkmark_10x15"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnhellogerryim"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_8pxv"
                android:paddingEnd="@dimen/_20pxh"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_8pxv" style="@style/groupStyleindigo_50cornerRadius">
                <TextView android:id="@+id/txtHelloGerryim"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_5pxh"
                    android:text="@{chatVM.chatModel.txtHelloGerryim}"
                    style="@style/txtHeeboregular15" tools:text="@string/msg_hello_gerry_i_m"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearRowfortynine"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearColumnfortynine"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <ImageView android:id="@+id/imageFortyNine"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_65pxh"
                        android:layout_width="@dimen/_109pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_15pxh}"
                        imageRes="@{@drawable/img_49_65x109}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_49_65x109"/>
                    <ImageView android:id="@+id/imageFifty"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_65pxh"
                        android:layout_width="@dimen/_109pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_1pxh}"
                        imageRes="@{@drawable/img_50_65x109}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_50_65x109"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageFiftyOne"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_130pxh"
                    android:layout_width="@dimen/_160pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_15pxh}"
                    imageRes="@{@drawable/img_51_130x160}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_51_130x160"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_deep_purple_a200_radius_tl_15_bl_15_br_15"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:gravity="center" android:id="@+id/btnWowawesome"
                android:layout_height="@dimen/_45pxv"
                android:layout_width="@dimen/_179pxh"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_34pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_wow_awesome"
                android:textAllCaps="false"
                android:textColor="@color/white_A700"
                android:textFontWeight="400"
                android:textSize="@dimen/_14pxh"
                android:textStyle="normal" tools:text="@string/lbl_wow_awesome"/>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearRowdeliveredone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtDeliveredOne"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{chatVM.chatModel.txtDeliveredOne}"
                    style="@style/txtInterregular12_3" tools:text="@string/lbl_delivered"/>
                <ImageView android:id="@+id/imageCheckmarkOne"
                    android:layout_gravity="bottom"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_width="@dimen/_15pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_checkmark_10x15"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_checkmark_10x15"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearRowaction"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <EditText
                android:background="@drawable/rectangle_bg_gray_100_01_radius_25"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:hint="@string/lbl_write_a_comment"
                android:id="@+id/etAction" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:paddingBottom="@dimen/_16pxv"
                android:paddingEnd="@dimen/_12pxh"
                android:paddingStart="@dimen/_12pxh"
                android:paddingTop="@dimen/_16pxv"
                android:singleLine="true"
                android:text="@={chatVM.chatModel.etActionValue}"
                android:textColor="@color/gray_500_02"
                android:textColorHint="@color/gray_500_02"
                android:textFontWeight="500"
                android:textSize="@dimen/_14pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <ImageButton
                android:background="@drawable/rectangle_bg_deep_purple_a200_radius_25"
                android:id="@+id/btnSend"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_50pxh"
                android:layout_width="@dimen/_50pxh"
                android:paddingHorizontal="@dimen/_13pxh"
                android:paddingVertical="@dimen/_13pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_send_50x50" tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</layout>
